<h1>Create a Post!</h1>
<%= form_for @post do |f| %>
  <%= f.label "Title" %>
  <%= f.text_field :title %>
  <%= f.label "Content" %>
  <%= f.text_area :content %>
  <%= f.label "Choose a Category" %>
  <%= f.collection_check_boxes :category_ids, Category.all, :id, :name %>
  <%= f.label "And/Or Create a Category" %>
  <%= f.fields_for :categories, @post.categories.build do |categories_fields| %>
    <%= categories_fields.text_field :name %>
  <% end %>
  <%= f.submit %>
<% end %>